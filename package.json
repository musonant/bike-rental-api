{
  "name": "bike-rentals-api",
  "version": "0.0.1",
  "engines": {
    "node": "12.14.0"
  },
  "description": "Bike Rental API",
  "author": "@musonant",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "ts-node -r tsconfig-paths/register src/server.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/server.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "rebuild": "rimraf dist && npm run build",
    "prestart:prod": "npm run rebuild",
    "start:prod": "link-module-alias && node dist/server.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "db:seed": "node ./dist/database/seeders/index.js",
    "db:migrate": "npm run rebuild && link-module-alias && sequelize db:migrate",
    "db:reset": "npm run rebuild && link-module-alias && sequelize db:migrate:undo:all",
    "heroku-postbuild": "npm run db:migrate"
  },
  "_moduleAliases": {
    "src": "dist"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "@sendgrid/mail": "^7.4.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.2",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "http": "0.0.0",
    "jsonwebtoken": "^8.5.1",
    "link-module-alias": "^1.2.0",
    "nodemon": "^2.0.2",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "rimraf": "2.6.3",
    "rxjs": "6.5.2",
    "sequelize": "^5.21.5",
    "sequelize-cli": "^5.5.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.7.3",
    "wait-on": "^4.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/node": "^13.13.52",
    "fs": "0.0.1-security",
    "tslint": "^6.0.0"
  }
}
